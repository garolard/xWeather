<views:MvxWindowsPage
    x:Class="XWeather.Uwp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XWeather.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.WindowsUWP.Views"
    xmlns:viewModels="using:XWeather.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{StaticResource DesignViewModel}">

    <views:MvxWindowsPage.Resources>
        <viewModels:MainViewModel x:Key="DesignViewModel" />
    </views:MvxWindowsPage.Resources>
    
    <RelativePanel x:Name="RootContainer" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="CurrentTemperature" TextWrapping="Wrap" Text="{Binding CurrentWeather.Main.Temp}" Style="{StaticResource HeaderTextBlockStyle}" FontSize="72" Margin="80,160,0,0"/>
        <TextBlock x:Name="DetectedCity" TextWrapping="Wrap" Text="{Binding CurrentWeather.Name}" Margin="80,0,0,0" RelativePanel.Below="CurrentTemperature" RelativePanel.AlignLeftWith="CurrentTemperature" Style="{StaticResource TitleTextBlockStyle}" />
    </RelativePanel>
</views:MvxWindowsPage>
